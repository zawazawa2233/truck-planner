<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>月報編集 | 日報保管庫</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="app-header">
      <div class="brand">
        <div class="brand-title">日報保管庫</div>
        <div class="brand-sub">月報編集</div>
      </div>
      <a class="button" href="/monthly/<%= monthlyReport.ym %>">詳細へ戻る</a>
    </header>

    <main class="container">
      <section class="form-card">
        <% if (error) { %>
          <div class="error"><%= error %></div>
        <% } %>
        <form action="/monthly/<%= monthlyReport.ym %>" method="POST" enctype="multipart/form-data" class="report-form">
          <label>
            月 (YYYY-MM)
            <input type="month" value="<%= monthlyReport.ym %>" disabled />
          </label>
          <label>
            タイトル
            <input type="text" name="title" value="<%= monthlyReport.title || '' %>" />
          </label>
          <label>
            本文
            <textarea name="body" rows="10"><%= monthlyReport.body || '' %></textarea>
          </label>

          <div class="attachments-edit">
            <div class="section-title">既存添付</div>
            <% if (attachments.length === 0) { %>
              <div class="empty">添付ファイルはありません。</div>
            <% } else { %>
              <div class="attachment-grid">
                <% attachments.forEach((file) => { %>
                  <label class="attachment-card selectable">
                    <input type="checkbox" name="deleteAttachments" value="<%= file.id %>" />
                    <div class="attachment-preview">
                      <% if (file.mime_type.startsWith('image/')) { %>
                        <img src="/uploads/<%= file.filename %>" alt="<%= file.original_name %>" />
                      <% } else { %>
                        <div class="pdf-label">PDF</div>
                      <% } %>
                    </div>
                    <div class="attachment-name"><%= file.original_name %></div>
                    <div class="attachment-delete">削除</div>
                  </label>
                <% }) %>
              </div>
            <% } %>
          </div>

          <label>
            添付ファイルを追加 (jpg / png / pdf)
            <input type="file" name="files" multiple accept=".jpg,.jpeg,.png,.pdf" />
          </label>

          <div class="actions">
            <button type="submit" class="button primary">更新する</button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
