<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= report.title %> | 日報保管庫</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="app-header">
      <div class="brand">
        <div class="brand-title">日報保管庫</div>
        <div class="brand-sub">日報詳細</div>
      </div>
      <a class="button" href="/">一覧へ戻る</a>
    </header>

    <main class="container">
      <article class="report-detail">
        <div class="report-meta">
          <% if (report.date) { %>
            <span class="chip"><%= report.date %></span>
          <% } %>
          <% if (report.prefecture) { %>
            <span class="chip"><%= report.prefecture %></span>
          <% } %>
          <% if (report.company) { %>
            <span class="chip"><%= report.company %></span>
          <% } %>
        </div>
        <h1><%= report.title || '無題' %></h1>
        <% if (report.tags) { %>
          <div class="tags">
            <% report.tags.split(',').map(t => t.trim()).filter(Boolean).forEach(tag => { %>
              <span class="tag">#<%= tag %></span>
            <% }) %>
          </div>
        <% } %>
        <% if (report.body) { %>
          <p class="report-body"><%= report.body %></p>
        <% } %>

        <div class="card-actions">
          <a class="text-link" href="/reports/<%= report.id %>/edit">編集</a>
        </div>

        <section class="attachments">
          <h2>添付ファイル</h2>
          <% if (attachments.length === 0) { %>
            <div class="empty">添付ファイルはありません。</div>
          <% } else { %>
            <div class="attachment-grid">
              <% attachments.forEach((file) => { %>
                <% if (file.mime_type.startsWith('image/')) { %>
                  <button
                    class="attachment-card js-lightbox"
                    type="button"
                    data-src="/uploads/<%= file.filename %>"
                    data-name="<%= file.original_name %>"
                  >
                    <img src="/uploads/<%= file.filename %>" alt="<%= file.original_name %>" />
                    <div class="attachment-name"><%= file.original_name %></div>
                  </button>
                <% } else { %>
                  <a
                    class="attachment-card pdf"
                    href="/uploads/<%= file.filename %>"
                    target="_blank"
                    rel="noreferrer"
                  >
                    <div class="pdf-label">PDF</div>
                    <div class="attachment-name"><%= file.original_name %></div>
                  </a>
                <% } %>
              <% }) %>
            </div>
          <% } %>
        </section>
      </article>
    </main>

    <div class="lightbox" id="lightbox" aria-hidden="true">
      <div class="lightbox-backdrop" data-close></div>
      <div class="lightbox-content">
        <button class="lightbox-close" data-close>×</button>
        <img id="lightbox-image" alt="" />
        <div class="lightbox-caption" id="lightbox-caption"></div>
      </div>
    </div>

    <script src="/app.js"></script>
  </body>
</html>
