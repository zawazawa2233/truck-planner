<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= monthlyReport.ym %> | 月報詳細</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="app-header">
      <div class="brand">
        <div class="brand-title">日報保管庫</div>
        <div class="brand-sub">月報詳細</div>
      </div>
      <div class="header-links">
        <a class="button" href="/monthly">月報一覧</a>
        <a class="button" href="/">日報一覧</a>
      </div>
    </header>

    <main class="container">
      <article class="report-detail">
        <div class="report-meta">
          <span class="chip"><%= monthlyReport.ym %></span>
        </div>
        <h1><%= monthlyReport.title || '無題の月報' %></h1>
        <% if (monthlyReport.body) { %>
          <p class="report-body"><%= monthlyReport.body %></p>
        <% } %>

        <div class="card-actions">
          <a class="text-link" href="/monthly/<%= monthlyReport.ym %>/edit">編集</a>
        </div>

        <section class="attachments">
          <h2>添付ファイル</h2>
          <% if (attachments.length === 0) { %>
            <div class="empty">添付ファイルはありません。</div>
          <% } else { %>
            <div class="attachment-grid">
              <% attachments.forEach((file) => { %>
                <% if (file.mime_type.startsWith('image/')) { %>
                  <button
                    class="attachment-card js-lightbox"
                    type="button"
                    data-src="/uploads/<%= file.filename %>"
                    data-name="<%= file.original_name %>"
                  >
                    <img src="/uploads/<%= file.filename %>" alt="<%= file.original_name %>" />
                    <div class="attachment-name"><%= file.original_name %></div>
                  </button>
                <% } else { %>
                  <a class="attachment-card pdf" href="/uploads/<%= file.filename %>" target="_blank" rel="noreferrer">
                    <div class="pdf-label">PDF</div>
                    <div class="attachment-name"><%= file.original_name %></div>
                  </a>
                <% } %>
              <% }) %>
            </div>
          <% } %>
        </section>

        <section class="calendar-section">
          <h2><%= monthlyReport.ym %> カレンダー</h2>
          <div class="calendar-grid">
            <% calendar.forEach((item) => { %>
              <a class="calendar-day <%= item.hasReport ? 'has-report' : 'no-report' %>" href="<%= item.url %>">
                <span class="day-number"><%= item.day %></span>
                <span class="day-label"><%= item.hasReport ? '日報あり' : '新規作成' %></span>
              </a>
            <% }) %>
          </div>
        </section>
      </article>
    </main>

    <div class="lightbox" id="lightbox" aria-hidden="true">
      <div class="lightbox-backdrop" data-close></div>
      <div class="lightbox-content">
        <button class="lightbox-close" data-close>×</button>
        <img id="lightbox-image" alt="" />
        <div class="lightbox-caption" id="lightbox-caption"></div>
      </div>
    </div>

    <script src="/app.js"></script>
  </body>
</html>
