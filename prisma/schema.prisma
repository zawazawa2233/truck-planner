generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FuelStation {
  id            String   @id @default(cuid())
  sourceId      String?  @unique
  brand         String
  name          String
  address       String
  lat           Float
  lng           Float
  isHighway     Boolean  @default(false)
  service24h    Boolean  @default(false)
  shower        Boolean  @default(false)
  convenience   Boolean  @default(false)
  largeParking  Boolean  @default(false)
  metadata      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([brand])
  @@index([isHighway])
}
